/*
const myVAlue=[55,24,14,25,46,39,18,45]

what is the absolute difference between the mid and first element in the array const myVAlue=[55,24,14,25,46,39,18,45]
*/

const myVAlue=[55,24,14,25,46,39,18,45]
function findDifference(arr) {
let midIndex = Math.floor(arr.length / 2);
let mid = arr[midIndex]
let first = arr[0];
return Math.abs(mid - first);
}
console.log(findDifference(myVAlue))


